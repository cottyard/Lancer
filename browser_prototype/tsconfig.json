{
    "compileOnSave": false,
    "compilerOptions": {
        "noEmit": true,
        "target": "ES6",
        "removeComments": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "strict": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src"
    ]
}